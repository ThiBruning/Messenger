<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@color/common_google_signin_btn_text_dark_default">

    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/email_edit_login"
            android:background="@drawable/rounded_edittext_register_login"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="32dp" android:hint="Email"
            android:paddingLeft="16dp" android:shadowColor="@color/common_google_signin_btn_text_dark_focused"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password_edit_login"
            android:background="@drawable/rounded_edittext_register_login"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/email_edit_login"
            app:layout_constraintStart_toStartOf="@+id/email_edit_login"
            app:layout_constraintEnd_toEndOf="@+id/email_edit_login"
            android:hint="Password" android:paddingLeft="16dp"
            android:shadowColor="@color/common_google_signin_btn_text_dark_focused"/>
    <Button
            android:text="Login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:id="@+id/button_login" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/password_edit_login"
            app:layout_constraintEnd_toEndOf="@+id/password_edit_login"
            app:layout_constraintStart_toStartOf="@+id/password_edit_login" android:textColor="@android:color/white"/>
    <TextView
            android:text="Back to Registration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_registration_link"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="16sp" android:textStyle="bold" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button_login"
            app:layout_constraintStart_toStartOf="@+id/button_login"
            app:layout_constraintEnd_toEndOf="@+id/button_login"
            app:layout_constraintHorizontal_bias="0.502"/>
</androidx.constraintlayout.widget.ConstraintLayout>