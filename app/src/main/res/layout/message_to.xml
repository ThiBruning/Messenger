<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                    android:layout_marginBottom="12dp">

    <TextView
            android:text="This is my message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/message_to"
            android:background="@drawable/rounded_message"
            android:padding="15dp"
            android:maxWidth="240dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/imageview_to" android:layout_marginRight="8dp"
            app:layout_constraintTop_toTopOf="@+id/imageview_to"/>
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@android:drawable/btn_dialog"
            android:id="@+id/imageview_to" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>